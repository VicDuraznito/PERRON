<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Edit Profile</h1>

  {{#each tasks}}

  <form action="" method="POST" class="mt-4">


      
    
      

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="first_name" name="first_name" value="{{first_name}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="last_name" name="last_name" value="{{last_name}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="EMAIL" name="email" value="{{email}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="SALARY" name="salary" value="{{salary}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="JOB" name="job" value="{{job}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="AGE" name="age" value="{{age}}">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="ROLE" name="role" value="{{role}}">


    <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-600 focus:bg-green-700">Send</button>

      
  </form>

  {{/each}}

</div>

